pipeline {
    agent any

    environment {
        GIT_URL = 'git@github.com:shivashankarbukka402/3tire_app.git'
        GIT_BRANCH = 'main'
        GIT_CREDENTIALS = 'shivashankarbukka402'
    }

    stages {
        stage('CHECKOUT') {
            steps{
                script {
                    checkout scmGit(branches: [[name: '*/main']], 
                    extensions: [],
                     userRemoteConfigs: [[credentialsId: 'shivashankarbukka402', 
                        url: 'git@github.com:shivashankarbukka402/3tire_app.git']])
                }
            }
        }
        stage('CHECK') {
            steps {
                sh '''
                   ls -lrt
                   echo "$GIT_BRANCH"
                '''
            }
        }
    }
}